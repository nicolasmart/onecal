<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingTop="5dp"
        android:paddingStart="55sp"
        android:text="Title"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/date_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="55sp"
        android:textSize="16sp"
        android:paddingBottom="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toBottomOf="@+id/item_info"
        android:text="Additional info"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/repeat_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="0dp"
        android:textSize="16sp"
        android:paddingStart="55sp"
        app:layout_constraintTop_toBottomOf="@+id/date_info"
        android:text="Additional info"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/invisible_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintRight_toLeftOf="@id/busyview"
        android:paddingRight="40sp"
        android:paddingLeft="40sp"
        android:text="Additional info"
        android:textAppearance="?attr/textAppearanceListItem"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/busyview"
        android:paddingStart="20sp"
        android:layout_width="35sp"
        android:layout_height="15sp"
        android:src="@drawable/green_circle"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
