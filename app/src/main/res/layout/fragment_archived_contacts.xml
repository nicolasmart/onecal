<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:paddingStart="10dp"
        android:text="Title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/contact_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="13dp"
        android:textSize="16sp"
        android:paddingTop="14sp"
        android:paddingBottom="10sp"
        android:layout_marginBottom="0dp"
        android:gravity="bottom"
        android:textAlignment="gravity"
        app:layout_constraintTop_toTopOf="@id/contact_name"
        app:layout_constraintBottom_toBottomOf="@id/contact_name"
        app:layout_constraintLeft_toRightOf="@id/contact_name"
        android:text="Additional info"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/contact_invisible_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/photoview"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/contact_invisible_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/invisible_id"
        android:visibility="invisible"/>


</androidx.constraintlayout.widget.ConstraintLayout>
